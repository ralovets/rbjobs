- content_for :meta_title, t(".meta_title")
- content_for :sidebar do
  %h1= t(".sidebar.title")
  %p= t(".sidebar.description")
  %p= link_to t(".add"), new_vacancy_url, :class => "btn btn-primary btn-large"
- @vacancies.in_groups_of(2, false) do |group|
  .row
    - for vacancy in group
      %article.span4
        %h1= link_to vacancy.title, vacancy
        %h3.muted.company
          = company_location_tag(vacancy)
          %br/
          %small= t('.expired_at', expired_at: l(vacancy.expire_at)).html_safe
        = vacancy.excerpt_html.html_safe
= paginate @vacancies